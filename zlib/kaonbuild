name="zlib"
version="1.2.11"

download() {
    cd $src
    wget -nc https://zlib.net/$name-$version.tar.xz
    tar xvf $name-$version.tar.xz
}

build() {
    cd $src/$name-$version

    ./configure --prefix=/usr
    make
}

package() {
    cd $src/$name-$version
    make DESTDIR=$bin install
    cd $bin
    rm -fv usr/lib/libz.a
}
